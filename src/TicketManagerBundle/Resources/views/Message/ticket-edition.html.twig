{% extends 'TicketManagerBundle::layout.html.twig' %}

{% block content %}
    <h1>Message edit</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="Edit" class="btn btn-primary">
    {{ form_end(edit_form) }}

    <br>

    {{ form_start(delete_form) }}
    <input type="submit" value="Delete Message" class="btn btn-primary btn-danger">
    {{ form_end(delete_form) }}

    <a href="{{ path('ticket_show', { 'id' : message.ticket.id}) }}" class="btn btn-primary">Back to the ticket</a>
{% endblock %}