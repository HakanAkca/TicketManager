{% extends 'TicketManagerBundle::layout.html.twig' %}

{% block content %}
    <h1>Edition du ticket</h1>

    <div class="container">

        {{ form_start(edit_form) }}
        <div class="form-group row">
            {{ form_widget(edit_form) }}
            <input type="submit" value="Edit" class="btn btn-default">
            {{ form_end(edit_form) }}
        </div>
    </div>
    <hr>

    <a href="{{ path('ticket_show', { 'id' : ticket.id}) }}" class="btn btn-default">Revenir sur le ticket</a>
{% endblock %}